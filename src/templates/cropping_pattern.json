          "isRequired": true,
          "choices": [
            "Yes",
            "No"
          ]
        },
        {
          "type": "checkbox",
          "name": "select_multiple_widgets",
          "visibleIf": "{Uncropped_barren_land} = 'No'",
          "title": "What is the main source of irrigation in this patch of the settlement?",
          "choices": [
            "Rainfall",
            "Well",
            "Borewell",
            "Canal",
