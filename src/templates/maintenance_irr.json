{
  "title": "Propose Maintenance On Existing Irrigation Structures",
  "logoFit": "none",
  "logoPosition": "right",
  "completedHtml": "<h3>Irrigation Structure Maintenance proposal has been recorded!</h3>",
  "loadingHtml": "<h3>Loading Form...</h3>",
  "pages": [
    {
      "name": "page1",
      "elements": [
        {
          "type": "text",
          "name": "beneficiary_settlement",
          "title": "Name of Beneficiary's Settlement",
          "isRequired": true
        },
        {
          "type": "radiogroup",
          "name": "demand_type",
          "title": "Type of demand",
          "isRequired": true,
          "choices": [
            {
              "value": "Community_demand",
              "text": "Community Demand"
            },
            {
              "value": "Individual_demand",
              "text": "Individual Demand"
            }
          ]
        },
        {
          "type": "text",
          "name": "Beneficiary_Name",
          "visibleIf": "{demand_type} = 'Individual_demand'",
          "title": "Beneficiary's Name",
          "isRequired": true
        },
        {
          "type": "text",
          "name": "ben_father",
          "visibleIf": "{demand_type} = 'Individual_demand'",
          "title": "Beneficiary's father's name",
          "isRequired": true
        },
        {
          "type": "text",
          "name": "Beneficiary_Contact_Number",
          "visibleIf": "{demand_type} = 'Individual_demand'",
          "title": "Beneficiary's Contact Number",
          "validators": [
            {
              "type": "regex",
              "text": "Enter a phone number (format: 9876543210)",
              "regex": "^(?:(?:\\+?91[-\\s]?)|0)?[6-9]\\d{9}$"
            }
          ],
          "inputType": "tel"
        },
        {
          "type": "radiogroup",
          "name": "select_one_irrigation_structure",
          "title": "Select the type of repair maintenance required in this irrigation structure ?",
          "isRequired": true,
          "choices": [
            "Farm pond",
            "Community Pond",
            "Well",
            "Canal",
            "Farm bund"
          ]
        },
        {
          "type": "checkbox",
          "name": "select_one_farm_pond",
          "visibleIf": "({select_one_irrigation_structure} == 'Farm pond')",
          "title": "Select the type of repair maintenance required for farm pond?",
          "choices": [
            {
              "value": "Removal_of_accumulated_sediments",
              "text": "Removal of accumulated sediments"
            },
            {
              "value": "Repairing_cracks_or_damage_in_embankments",
              "text": "Repairing cracks or damage in embankments"
            },
            {
              "value": "Controlling_seepage_or_leaks_in_the_pond_bed",
              "text": "Controlling seepage or leaks in the pond bed"
            },
            {
              "value": "Erosion_control_on_embankments",
              "text": "Erosion control on embankments"
            },
            {
              "value": "Addressing_excessive_aquatic_vegetation_growth",
              "text": "Addressing excessive aquatic vegetation growth"
            },
            {
              "value": "other",
              "text": "Other"
            }
          ]
        },
        {
          "type": "text",
          "name": "select_one_farm_pond_other",
          "visibleIf": "{select_one_farm_pond} anyof ['other'] and {select_one_irrigation_structure} = 'Farm pond'",
          "title": "Specify other",
          "isRequired": true
        },
        {
          "type": "checkbox",
          "name": "select_one_community_pond",
          "visibleIf": "({select_one_irrigation_structure} == 'Community Pond')",
          "title": "Select the type of repair maintenance required for community pond?",
          "choices": [
            {
              "value": "Removal_of_accumulated_sediments",
              "text": "Removal of accumulated sediments"
            },
            {
              "value": "Shoreline_erosion_control",
              "text": "Shoreline erosion control"
            },
            {
              "value": "Repair_or_cleaning_of_inlet_outlet_structures",
              "text": "Repair or cleaning of inlet outlet structures"
            },
            {
              "value": "Controlling_excessive_aquatic_vegetation_growth",
              "text": "Controlling excessive aquatic vegetation growth"
            },
            {
              "value": "other",
              "text": "Other"
            }
          ]
        },
        {
          "type": "text",
          "name": "select_one_community_pond_other",
          "visibleIf": "{select_one_community_pond} anyof ['other'] and {select_one_irrigation_structure} = 'Community Pond'",
          "title": "Specify other",
          "isRequired": true
        },
        {
          "type": "checkbox",
          "name": "select_one_well",
          "visibleIf": "({select_one_irrigation_structure} == 'Well')",
          "title": "Select the type of repair maintenance required for well?",
          "choices": [
            {
              "value": "Cleaning_and_removal_of_silt_or_debris",
              "text": "Cleaning and removal of silt or debris"
            },
            {
              "value": "Repairing_cracks_or_damage_to_well_walls",
              "text": "Repairing cracks or damage to well walls"
            },
            {
              "value": "Deepening_the_well_to_enhance_water_availability",
              "text": "Deepening the well to enhance water availability"
            },
            {
              "value": "Repair_or_replacement_of_well_cover_or_structure",
              "text": "Repair or replacement of well cover or structure"
            },
            {
              "value": "Installing_or_repairing_pumping_mechanisms",
              "text": "Installing or repairing pumping mechanisms"
            },
            {
              "value": "other",
              "text": "Other"
            }
          ]
        },
        {
          "type": "text",
          "name": "select_one_well_other",
          "visibleIf": "{select_one_well} anyof ['other'] and {select_one_irrigation_structure} = 'Well'",
          "title": "Specify other",
          "isRequired": true
        },
        {
          "type": "checkbox",
          "name": "select_one_canal",
          "visibleIf": "({select_one_irrigation_structure} == 'Canal')",
          "title": "Select the type of repair maintenance required for canal?",
          "choices": [
            {
              "value": "Stabilizing_canal_banks_to_prevent_erosion",
              "text": "Stabilizing canal banks to prevent erosion"
            },
            {
              "value": "Lining_Repairs",
              "text": "Lining Repairs"
            },
            {
              "value": "Desiliting",
              "text": "Desilting"
            },
            {
              "value": "Structural_repairs",
              "text": "Structural repairs"
            },
            {
              "value": "other",
              "text": "Other"
            }
          ]
        },
        {
          "type": "text",
          "name": "select_one_canal_other",
          "visibleIf": "{select_one_canal} anyof ['other'] and {select_one_irrigation_structure} = 'Canal'",
          "title": "Specify other",
          "isRequired": true
        },
        {
          "type": "checkbox",
          "name": "select_one_farm_bund",
          "visibleIf": "({select_one_irrigation_structure} == 'Farm bund')",
          "title": "Select the type of repair maintenance required for farm bund?",
          "choices": [
            "Repairing_cracks_or_breaches_in_the_bund",
            "Strengthening_bund_structure_with_additional_soil_or_materials",
            "Leveling_and_reshaping_the_bund_for_better_water_retention",
            "Vegetative_stabilization_to_prevent_erosion",
            {
              "value": "other",
              "text": "Other"
            }
          ]
        },
        {
          "type": "text",
          "name": "select_one_farm_bund_other",
          "visibleIf": "{select_one_farm_bund} anyof ['other'] and {select_one_irrigation_structure} = 'Farm bund'",
          "title": "Specify other",
          "isRequired": true
        }
      ]
    }
  ],
  "widthMode": "responsive"
}